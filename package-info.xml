		<remove-file name="$languagedir/PMAttachments.russian.php" />
		<remove-file name="$languagedir/PMAttachments.russian-utf8.php" />
	</uninstall>

	<!--// ALL SMF 2.0 RC Versions //-->
	<install for="2.0 RC2, 2.0 RC3, 2.0 RC4">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<code>db_install.php</code>
		<modification type="file">install_20x.xml</modification>
		<modification type="file">template_RC.xml</modification>
		<require-dir name="pm_attachments" destination="$boarddir" />
